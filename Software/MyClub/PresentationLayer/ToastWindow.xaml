<Window x:Class="PresentationLayer.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Width="300" Height="100"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Border Background="#CC333333" CornerRadius="10" Padding="10">
        <TextBlock x:Name="txtToastMessage" 
                   Text="Toast poruka" 
                   Foreground="White" 
                   FontSize="16" 
                   TextWrapping="Wrap"/>
    </Border>
</Window>
