<UserControl x:Class="PresentationLayer.UserControls.UcMatchManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             xmlns:helper="clr-namespace:PresentationLayer.Helper"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <helper:DateToPastConverter x:Key="DateToPastConverter"/>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A234B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#041633"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#0A234B" Grid.Row="0" Padding="15">
            <TextBlock Text="Match management"
                   Foreground="White"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>

        <DataGrid x:Name="dgCoachGrid" 
         Margin="0,50,0,20"
         IsReadOnly="True"
         HorizontalAlignment="Center"
         VerticalAlignment="Top"
         Height="auto"
         Width="Auto"
         Grid.Row="1"
         FontSize="14"
         AutoGenerateColumns="False">
            <!-- Prvo sve postojeće kolone -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="MatchID" Binding="{Binding MatchID}" Width="80"/>
                <DataGridTextColumn Header="TeamID" Binding="{Binding TeamID}" Width="80"/>
                <DataGridTextColumn Header="MatchDate" Binding="{Binding MatchDate, StringFormat=\{0:dd.MM.yyyy\}}" Width="100"/>
                <DataGridTextColumn Header="OpponentTeam" Binding="{Binding OpponentTeam}" Width="120"/>
                <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="100"/>
                <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="100"/>
                <DataGridTextColumn Header="StartTime" Binding="{Binding StartTime}" Width="120"/>
                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="150"/>
                <DataGridTextColumn Header="Team" Binding="{Binding Team.Name}" Width="90"/>
                <!-- Attendance kolona na kraju -->
                <DataGridTemplateColumn Header="Attendance" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnAttendance" 
                           Content="Attendance" 
                           Click="btnAttendance_Click"
                           Width="75"
                           IsEnabled="{Binding MatchDate, Converter={StaticResource DateToPastConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="stackPanel" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <Button x:Name="btnAddMatch" Content="Add match" Style="{StaticResource ButtonStyle}" Click="btnAddMatch_Click"/>
            <Button x:Name="btnUpdateMatch" Content="Update match" Style="{StaticResource ButtonStyle}" Click="btnUpdateMatch_Click"/>
            <Button x:Name="btnDeleteMatch" Content="Delete match" Style="{StaticResource ButtonStyle}" Click="btnDeleteMatch_Click"/>
            <Button x:Name="btnPostponeMatch" Content="Postpone match" Style="{StaticResource ButtonStyle}" Click="btnPostponeMatch_Click" Width="124"/>
        </StackPanel>
    </Grid>
</UserControl>
