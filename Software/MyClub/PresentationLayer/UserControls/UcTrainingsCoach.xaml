<UserControl x:Class="PresentationLayer.UserControls.UcTrainingsCoach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationLayer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0A234B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#041633"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#0A234B" Grid.Row="0" Padding="15">
            <TextBlock Text="Trainings"
                       Foreground="White"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <DataGrid x:Name="dgTrainings"
                  IsReadOnly="True"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Height="Auto"
                  Margin="10 30 10 10"
                  Width="Auto"
                  SelectionMode="Single"
                  Background="#FFF0F4FF"
                  FontSize="14"
                  CanUserReorderColumns="False" 
                  CanUserResizeColumns="False"
                  AutoGenerateColumns="False"
                  VerticalScrollBarVisibility="Hidden"
                  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" 
                                  Binding="{Binding TrainingDate}" 
                                  Width="150"/>
                <DataGridTextColumn Header="Start Time" 
                                  Binding="{Binding StartTime}" 
                                  Width="150"/>
                <DataGridTextColumn Header="End Time" 
                                  Binding="{Binding EndTime}" 
                                  Width="150"/>
                <DataGridTextColumn Header="Team" 
                                  Binding="{Binding Team.Name}" 
                                  Width="200"/>
                <DataGridTemplateColumn Header="Attendance" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnAttendance" 
                                    Content="Attendance" 
                                    Click="btnAttendance_Click"
                                    Style="{StaticResource ButtonStyle}"
                                    Width="90"
                                    Height="30"
                                    Margin="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10" 
                    Grid.Row="2">
            <Button x:Name="btnAddNew" 
                    Content="Add New" 
                    Style="{StaticResource ButtonStyle}" 
                    Click="btnAddNew_Click"/>
            <Button x:Name="btnUpdate" 
                    Content="Modify" 
                    Style="{StaticResource ButtonStyle}" 
                    Click="btnUpdate_Click"/>
            <Button x:Name="btnRemove" 
                    Content="Remove" 
                    Style="{StaticResource ButtonStyle}" 
                    Click="btnRemove_Click"/>
        </StackPanel>
    </Grid>
</UserControl>